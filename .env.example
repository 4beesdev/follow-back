# ============================================
# follow-api (oris-backend) Environment
# ============================================
# Copy this file to .env and fill in values.
# NEVER commit .env to git!

# PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/oris
SPRING_DATASOURCE_USERNAME=oris
SPRING_DATASOURCE_PASSWORD=

# Hikari Connection Pool
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_LEAK_DETECTION_THRESHOLD=60000

# Mongo service (follow-gps-data) base URL
ORIS_MONGO_BASE_URL=http://follow-gps-data:8080

# Firebase push notifications (path inside container)
GCP_FIREBASE_SERVICE_ACCOUNT=/secrets/firebase.json

# Server
SERVER_PORT=8000
SERVER_ADDRESS=0.0.0.0

# JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# SMS API credentials (base64)
SMS_API_CREDENTIALS=

# Logging
LOGGING_FILE_NAME=/home/root/logs/app.log
